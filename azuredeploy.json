{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "automationAccountName": {
        "type": "string",
        "defaultValue": "[concat('auto-', uniqueString(resourceGroup().id))]",
        "metadata": {
          "description": "Name of the Azure Automation Account"
        }
      }
    },
    "resources": [
      {
        "type": "Microsoft.Automation/automationAccounts",
        "apiVersion": "2019-06-01",
        "name": "[parameters('automationAccountName')]",
        "location": "[resourceGroup().location]",
        "properties": {
            "publicNetworkAccess": true,
            "disableLocalAuth": false,
            "sku": {
                "name": "Basic"
            }
        }

      },
      {
        "type": "Microsoft.Automation/automationAccounts/runbooks",
        "apiVersion": "2019-06-01",
        "name": "[concat(parameters('automationAccountName'), '/MyRunbookName')]",
        "location": "[resourceGroup().location]",
        "dependsOn": [
          "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
        ],
        "properties": {
          "runbookType": "PowerShell",
          "description": "My runbook description",
          "logVerbose": true,
          "logProgress": true,
          "publishContentLink": {
            "uri": "https://raw.githubusercontent.com/MS-WORKLAB/avd_automation/main/testCustom.ps1",
            "contentVersion": "1.0.0.0"
          }
        }
      }
    ]
  }
  